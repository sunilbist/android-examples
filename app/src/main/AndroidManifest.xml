<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="np.com.westernit.digitalboard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigitalBoard">

        <receiver android:name=".AlarmBroadcast"/>
        <activity android:name=".AlarmActivity">
        </activity>
        <activity android:name=".AsyncActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".NotiActivity"></activity>
        <activity android:name=".SnackActivity" />
        <activity android:name=".DummyActivity" />
        <activity android:name=".ContextMenuActivity" />
        <activity android:name=".PopupMenuActivity" />
        <activity android:name=".OptionMenuActivity" />
        <activity android:name=".NastWebViewActivity" />
        <activity android:name=".CustomListActivity" />
        <activity android:name=".ListViewActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>